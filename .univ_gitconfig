[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto

[push]
	default = simple

[alias]
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	pr = pull --rebase
	br = branch -al
	ss = status -s
	sl = status
	ca = commit -am
	co = checkout
